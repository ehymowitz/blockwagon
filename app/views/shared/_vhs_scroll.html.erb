<%# <% video_cassettes = VideoCassette.all %>
<% filtered_vids = @video_cassettes.reject do |vhs| %>
  <% vhs.user == current_user %>
<% end %>

<% filtered_vids.last(10).each do |video_cassette| %>
  <div class="card-small mx-2 homepage-card">
    <% if video_cassette.cover_photo.blank? %>
      <%= link_to video_cassette_path(video_cassette)  do %>
        <%= image_tag "https://images-na.ssl-images-amazon.com/images/I/51lh93vBeRL._AC_SL1461_.jpg", style: "height: 300px; width: 200px" %>
      <% end %>
    <% else %>
      <%= link_to video_cassette_path(video_cassette)  do %>
        <%= image_tag video_cassette.cover_photo, class: "cover-img" %>
      <% end %>
    <% end %>

    <div class="card-small-info">
      <h5><strong><%= link_to video_cassette.title, video_cassette_path(video_cassette)%></strong></h5>
      <p><%= video_cassette.year %></p> <p><%= video_cassette.price %>.00$</p>
      <img src="<%=video_cassette.user.avatar%>" alt="User profile pic">
    </div>
  </div>
<% end %>
