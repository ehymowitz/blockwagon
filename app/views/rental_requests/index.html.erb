  <div class="container my-5">
    <h4><strong>Incoming Request üòÅ</strong></h4>
  </div>

  <div class="d-flex" style="width:80%; overflow:auto; margin: auto">
    <% @incoming_rental_requests.each do |request| %>
      <%= link_to video_cassette_path(request.video_cassette) do %>
        <div class="card-small mx-2">
          
          <%= image_tag request.video_cassette.cover_photo, class: "cover-img" %>

          <div class="card-small-info" style="display: inline-block" >
            <h5><strong><%= request.video_cassette.title %></strong></h5>
            <p><%= request.video_cassette.year %></p> <p><%= request.video_cassette.price %>.00$</p>

            <%= link_to accept_request_path(request), method: 'patch' do %>
              <i class="fas fa-check-circle"></i>
            <% end %>
            <%= link_to reject_request_path(request), method: 'patch' do %>
              <i class="fas fa-times-circle"></i>
            <% end %>

          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="container my-5">
    <h4><strong>Outgoing Request üòÅ</strong></h4>
  </div>

  <div class="d-flex" style="width:80%; overflow:auto; margin: auto">
    <% @outgoing_rental_requests.each do |request| %>
      <%= link_to video_cassette_path(request.video_cassette) do %>
        <div class="card-small mx-2">
          
          <%= image_tag request.video_cassette.cover_photo, class: "cover-img" %>

          <div class="card-small-info" style="display: inline-block" >
            <h5><strong><%= request.video_cassette.title %></strong></h5>
            <p><%= request.video_cassette.year %></p> <p><%= request.video_cassette.price %>.00$</p>
            <img src="<%= request.video_cassette.user.avatar %>" alt="User profile pic">
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

