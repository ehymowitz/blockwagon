
<h1 style="text-align:center">For all the nostalgics</h1>
<%= render 'shared/carousel' %>

<div class="container d-flex justify-content-around my-5">
  <div class="scrollable" style="width:100%; overflow:auto">
    <div class="row">
      <ul>
        <% @video_cassettes.each do |video_cassette| %>
          <li>
          <div class="col-12 col-md-6">
            <div class="card-small">
              <a href=<%= video_cassette_path(video_cassette) %>>
                <img src="<%=video_cassette.cover_photo%>" alt="VHS cover">
              </a>

              <div class="card-small-info">
                <h5><strong><%= link_to video_cassette.title, video_cassette_path(video_cassette)%></strong></h5>
                <p><%= video_cassette.year %></p> <p><%= video_cassette.price %>.00$</p>
                <img src="<%=video_cassette.user.avatar%>" alt="User profile pic">
              </div>

            </div>


            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>